{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/**/api/_build/**",
        "apps/**/public/build/**",
        "packages/**/dist/**"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "outputs": []
    }
  }
}
