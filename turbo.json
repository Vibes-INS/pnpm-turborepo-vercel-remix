{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/remix-app/api/_build.js",
        "apps/remix-app/public/build/**",
        "packages/ui/dist/**"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "lint": {
      "outputs": []
    }
  }
}
